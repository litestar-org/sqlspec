# http://editorconfig.org

root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf

[*.py]
charset = utf-8
indent_style = space
indent_size = 4

[*.{md,markdown}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.{json,yml,sh}]
indent_style = space
indent_size = 2

[*.bat]
indent_style = tab
end_of_line = crlf

[LICENSE.txt]
insert_final_newline = false

[Makefile]
indent_style = tab
